" Remappingz {{{

" Navigation
nnoremap <C-l> o
nnoremap <C-S-l> O
nnoremap <C-t> t
nnoremap <C-S-t> T

" Scroll
" nnoremap j 3j
" nnoremap k 3k
nnoremap J <C-d>
nnoremap K <C-u>
" nnoremap <A-j> 3j
" nnoremap <A-k> 3k
" nnoremap <A-h> 3h
" nnoremap <A-l> 3l

" Zoom
nnoremap zi zI
nnoremap zI zi
nnoremap zm zM
nnoremap zM zm
nnoremap zo zO
nnoremap zO zo
nnoremap zr zR
nnoremap zR zr
nnoremap zz zZ
nnoremap zZ zz

" Misc
noremap <silent> <Leader>s :source ~/.vimperatorrc<CR>:echo<Space>"source completed."<CR>

" Tabs
noremap d :tabclose!<CR>
nnoremap zh gT
nnoremap zl gt
nnoremap zH :tabmove -1<CR>
nnoremap zL :tabmove +1<CR>

" }}}

" Gmail
:command! -nargs=+ lazy autocmd VimperatorEnter .* <args>
:lazy fmaps -u='mail\.google\.com/mail' c / j k l n p o u e x s r a v . # [ ] ? gi gs >= gd ga gc
:lazy fmaps -u='feedly\.com/' j k J K r n p o v V A m x s V ? gh ga gg gl
" :lazy fmaps -u='mail\.google\.com/mail/.*/[0-9a-f]+$' c / j,n k,p n,j p,k o u e x s r a v . # [ ] ? gi gs >= gd ga gc

